<?xml version="1.0" encoding="utf-8"?>
<com.thuytrinh.quotemaker.view.ThemeView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="48dp"
  android:layout_height="48dp"
  android:padding="4dp">

  <View
    android:id="@+id/colorView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <ImageView
    android:id="@+id/checkMarkView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/shape_checked"
    android:scaleType="center" />
</com.thuytrinh.quotemaker.view.ThemeView>